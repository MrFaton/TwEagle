<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/jdbc
           http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

    <import resource="TwEagleConfig.xml"/>

    <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
        <property name="URL" value="jdbc:h2:mem:tweagle_test;MODE=MySQL;DB_CLOSE_DELAY=-1"/>
        <property name="user" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <jdbc:initialize-database>
        <jdbc:script location="/sql/Create schema.sql"/>
        <jdbc:script location="/sql/Create table - users.sql"/>
        <jdbc:script location="/sql/Create table - donor_users.sql"/>
        <jdbc:script location="/sql/Create table - tweets.sql"/>
        <jdbc:script location="/sql/Create table - mentions.sql"/>
        <jdbc:script location="/sql/Create table - posted_messages.sql"/>
        <jdbc:script location="/sql/Create table - words.sql"/>
    </jdbc:initialize-database>

    <bean id="dbTestHelper" class="util.DBTestHelper"/>
</beans>